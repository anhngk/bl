<div class="function-headline">
	<h1>Quản trị viên</h1>
</div>

<table>
	<thead>
		<tr>
			<th>Fullname</th>
			<th>Username</th>
			<th>Created</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @moderators.each do |moderator| %>
		<tr>
			<td><%= moderator.fullname %></td>
			<td><%= moderator.username %></td>
			<td><%= time_ago_in_words(moderator.created_at) %></td>
			<td><%= link_to 'Edit', edit_admin_moderator_path(moderator) %></td>
		</tr>
		<% end %>
	</tbody>
</table>