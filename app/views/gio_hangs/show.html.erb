<div class="container">
	<% if notice %>
	<p id="notice"><%= notice %></p>
	<% end %>
	<h2>Giỏ hàng</h2>
	<table class="table table-bordered">
		<thead>
			<th>Tên hàng hóa</th>
			<th>Số lượng</th>
			<th>Đơn giá</th>
			<th>Thành tiền</th>
		</thead>
		<% @gio_hang.chi_tiet_gio_hangs.each do |chi_tiet| %>
		<tr>
			<td><%= chi_tiet.hang_hoa.ten_hang %></td>
			<td><%= chi_tiet.so_luong %></td>
			<td><%= number_to_currency(chi_tiet.hang_hoa.gias.last[:gia_ban], locale: :vn) %></td>
			<td><%= number_to_currency(chi_tiet.tong_cong, locale: :vn) %></td>
		</tr>
		<% end %>
		<tr>
			<td colspan="3" style="text-align: right;"><strong>TỔNG CỘNG</strong></td>
			<td><strong><%= number_to_currency(@gio_hang.tong_cong, locale: :vn)%></strong></td>
		</tr>
	</table>

	<div class="pull-right">
		<%= link_to 'Trở lại', :back, class: 'btn btn-default' %>  
		<%= link_to 'Đặt hàng', new_don_hang_path, method: :get, class: 'btn btn-success' %>
	</div>
	
</div>	