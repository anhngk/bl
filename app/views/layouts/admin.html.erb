                    <li>
                      <i class="fa fa-user-astronaut fa-fw" aria-hidden="true"></i>
                      <p>Quản trị viên</p>
                    </li>
                    <% end %>
										</ul>
									</div>
								</div>
							</div>



							<div class="col-md-10">
								<div class="main-board">
									<div class="dashboard-navbar navbar row">
